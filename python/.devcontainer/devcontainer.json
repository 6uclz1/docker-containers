{
    "name": "Python DevContainer",
    "dockerFile": "Dockerfile",
    "context": ".",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.pylance"
      ],
      "settings": {
          "python.pythonPath": "/workspace/.venv/bin/python"
        }
      }
    },
    "postCreateCommand": "pip install -r requirements.txt"
  }
  